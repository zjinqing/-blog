<% include header %>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-1 column">
                </div>
                <div class="col-md-10 column">
                    <form method="post" action="/edit/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>">
                        <label>标题:</label><br>
                        <input type="text" name="title" value="<%= post.title %>" disabled="disabled"><br>
                        <label>正文:</label><br>
                        <textarea cols="100" rows="10" name="post"><%= post.post %></textarea>
                        <input type="submit" value="提交">
                    </form>
                </div>
                <div class="col-md-1 column">
                </div>
            </div>
        </div>
    </div>
</div>

<% include footer %>