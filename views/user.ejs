<% include header %>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-1 column">
                </div>
                <div class="col-md-10 column">
                    <% posts.forEach(function (post, index) { %>
                    <p><h2><a href="/u/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>"><%= post.title %></a></h2></p>
                    <p class="info">
                        发布作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
                        发布日期：<%= post.time.minute %> |
                        文章标签：
                        <% post.tags.forEach(function (tag, index) { %>
                        <% if (tag) { %>
                        <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
                        <% } %>
                        <% }) %>
                    </p>
                    <p><%- post.post %></p>
                    <p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
                    <% }) %>
                </div>
                <div class="col-md-1 column">
                </div>
            </div>
            <div class="col-sm-11 col-md-12 col-lg-10">
                <div class="pull-right btn btn-success " style="margin-right: 30px;border:1px solid #A8C8CA;background-color: #A8C8CA">
                    <%- include paging %>
                </div>
            </div>


        </div>

    </div>

</div>
<% include footer %>