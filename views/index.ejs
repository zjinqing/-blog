<% include header %>
<!--2048样式-->
<link rel="stylesheet" href="/stylesheets/2048.css">

<div role="main" id="main" class="cf">
    <!-- SLIDER -->
    <div class="slider-wrapper theme-halftone">
        <div id="slider" class="nivoSlider">
            <img src="/images/img/dummies/slides/01.jpg" alt=""/>
            <img src="/images/img/dummies/slides/02.jpg" alt=""/>
            <img src="/images/img/dummies/slides/03.jpg" alt=""/>
        </div>
        <div class="slider-left"></div>
        <div class="slider-right"></div>
    </div>
    <!-- ENDS SLIDER -->
    <!-- headline -->
    <!-- ENDS headline -->
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-12 column">
                <div class="row clearfix">
                    <div class="col-md-1 column">
                    </div>
                    <div class="col-sm-8 col-md-7 col-lg-6 column " style="border-right: 1px solid #A8C8CA">
                        <% posts.forEach(function (post, index) { %>
                        <p>
                        <h2 class="animated bounceInLeft"><a
                                    href="/u/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>"><%= post.title %></a>
                        </h2></p>
                        <p class="info">
                            发布作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
                            发布日期：<%= post.time.minute %> |
                            文章标签：
                            <% post.tags.forEach(function (tag, index) { %>
                            <% if (tag) { %>
                            <a href="/tags/<%= tag %>"><%= tag %></a>
                            <% } %>
                            <% }) %>
                        </p>
                        <p><%- post.post %></p>
                        <p class="info nav-tabs ">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
                        <% }) %>

                    </div>

                    <div class="col-sm-4 col-md-3 col-lg-3 column">
                        <!--新增搜索功能-->
                        <div class="search d7">
                            <form action="/search" method="get">
                                <input class="search" type="text" name="keyword" placeholder="搜索从这里开始...">
                                <button type="submit"></button>
                            </form>
                            </center>
                        </div>

                        <!--<form action="/search" method="get">-->
                        <!--<input class="search" type="text" placeholder="SEARCH" name="keyword">-->
                        <!--</form>-->
