<% include header %>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-1 column">
                </div>
                <div class="col-md-10 column">
                    <ul class="archive">
                        <% var lastday = 0 %>
                        <% posts.forEach(function(post,index){ %>
                        <% if(lastday != post.time.day ) {%>
                        <li><h3><%= post.time.day %></h3></li>
                        <% lastday = post.time.day }%>
                        <li><time><%= post.time.day %></time></li>
                        <li><a style="background-color: #A8C8CA;" href="
        /u/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>
        "><%= post.title %></a></li>
                        <% }) %>
                    </ul>
                </div>
                <div class="col-md-1 column">
                </div>
            </div>
        </div>
    </div>
</div>

<% include footer %>