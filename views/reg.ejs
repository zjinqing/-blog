<%include header %>
<link rel="stylesheet" href="/stylesheets/reglogin.css">
<script src="/js/reglogin.js"></script>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-4 column">
                </div>
                <div class="col-md-4 column">
                    <div class="wrap flex-c-c col-xs-12 col-sm-12 col-lg-6">
                        <form action="" method="post" class="flex-c-c animated rubberBand">
                            <ul class="select__list">
                                <!--<li id="js-usr-rtn" class="select__label">Sign in</li>-->
                                <li id="js-usr-new" class="select__label select__label--active animated bounceInDown">Sign up</li>
