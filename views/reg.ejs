                               <input style="width: 250px;" type="password" placeholder="确认密码" class="ui-field" id="js-field__r-pass" name="password-repeat"/>
                               <input style="width: 250px;" type="email" placeholder="邮箱" class="ui-field" id="js-field__email"name="email"/>
                               <input style="width: 250px;margin-bottom: 20px;" id="js-btn" class="ui-button --usr-new"  type="submit" ></input>

                        </form>
                    </div>
                </div>
                <div class="col-md-4 column">
                </div>
            </div>
        </div>
    </div>
</div>


<%include footer %>
